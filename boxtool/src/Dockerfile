FROM node:12-alpine

WORKDIR /var/www/boxtool/backend

COPY package*.json ./

RUN npm install

COPY . .

# Prepare .env 
ARG BACKEND_HOST
ARG BACKEND_DB_USER
ARG BACKEND_DB_PASSWORD
ARG BACKEND_DB_NAME

ENV BACKEND_HOST ${BACKEND_HOST}
ENV BACKEND_DB_HOST ${BACKEND_DB_HOST}
ENV BACKEND_DB_USER ${BACKEND_DB_USER}
ENV BACKEND_DB_PASSWORD ${BACKEND_DB_PASSWORD}
ENV BACKEND_DB_NAME ${BACKEND_DB_NAME}

RUN chmod +x init-env.sh
RUN ./init-env.sh

EXPOSE 8082

CMD ["npm", "start"]